extends layout
block content
  #pheader
  h1 Register Now.
  form#registerForm(method='POST', action='/models/user')
    .formfield
      .formfield--prompt Username:
      input#username(type='text', name='username')
    .formfield
      .formfield--prompt Password:
      input#password(type='password', name='password')
    input.submitButton(type='submit')
